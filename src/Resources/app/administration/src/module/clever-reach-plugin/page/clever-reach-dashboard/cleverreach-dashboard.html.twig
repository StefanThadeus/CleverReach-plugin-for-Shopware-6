{% block cleverreach_dashboard %}
    <div class="sw-cleverreach-dashboard">
        <sw-loader v-if="isLoading"/>
        <div class="sw-cleverreach-form-container">
            <div class="sw-cleverreach-header">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT2TdpHAB5xbd5FhID_yZFp9fnQkh4fsRDnB0uwDEfD&s"
                     alt="logo"/>
                <p>Client ID: <span class="client-id">{{ clientId }}</span></p>
            </div>
            <div class="sw-cleverreach-sync-status">Sync status:
                <span v-if="status === 'done'" class="status-done">Done</span>
                <span v-else-if="status === 'progress'" class="status-progress">In progress</span>
                <span v-else-if="status === 'error'" class="status-error">Error</span>
            </div>
            <button @click="startSynchronizationProcess">Synchronize</button>
        </div>
    </div>
{% endblock %}